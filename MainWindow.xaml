<Window x:Class="MacConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacConverter"
        mc:Ignorable="d"
        Title="MacConverter" Height="100" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Grid.Column="0" Grid.Row="0" Name="MacInput" KeyDown="MacInput_KeyDown" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Text="00:00:00:00:00:00" CharacterCasing="Upper"/>
        <TextBox Grid.Column="0" Grid.Row="1" Name="MacInput2" KeyDown="MacInput2_KeyDown"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0000.0000.0000" CharacterCasing="Upper"/>

        <Button Grid.Column="1" Grid.Row="0" Content="DOWN" Name="Conv1Button" Click="Conv1Button_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Content="UP" Name="Conv2Button" Click="Conv2Button_Click"/>
    </Grid>
</Window>
